@model Library.Models.Catalog.AssetIndexModel

<h2>Catalog</h2>

<div id="assets">
    <div id="assetTable">
        <table id="catalogIndexTable" class="table table-condensed">
            <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Author/Director</th>
                <th>Copies</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var asset in Model.Assets) {
                <tr>
                    <td>
                        <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@asset.Id">
                            <img src="@asset.ImageUrl" alt="Unavailable" class="imageCell" />
                        </a>
                    </td>
                    <td>@asset.Title</td>
                    <td>@asset.AuthorOrDirector</td>
                    <td>@asset.NumberOfCopies</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>